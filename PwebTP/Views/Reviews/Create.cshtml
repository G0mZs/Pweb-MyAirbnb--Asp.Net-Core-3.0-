@model PwebTP.Models.Reviews

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container mb-3 mt-3">
        <h1>Add a Comment</h1>
        @Html.ValidationSummary()
        <h4>Reviews</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="RoomId" value="@ViewData["Id"]"/>

                    <input type="hidden" asp-for="ReviewerId" />

                    <div class="form-group">
                        <label asp-for="LocationRating" class="control-label"></label>
                        <input asp-for="LocationRating" class="form-control" />
                        <span asp-validation-for="LocationRating" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserRating" class="control-label"></label>
                        <input asp-for="UserRating" class="form-control" />
                        <span asp-validation-for="UserRating" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmployeeRating" class="control-label"></label>
                        <input asp-for="EmployeeRating" class="form-control" />
                        <span asp-validation-for="EmployeeRating" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RoomRating" class="control-label"></label>
                        <input asp-for="RoomRating" class="form-control" />
                        <span asp-validation-for="RoomRating" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Comment" class="control-label"></label>
                        <textarea asp-for="Comment" class="form-control"></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-dark" />
                    </div>
                </form>
            </div>
        </div>
    </div>

<style>
    h1{
        padding-top: 1em;
        font-family:'Playfair Display';
    }

    
    .field-validation-error {
        color: #b94a48;
    }

    .field-validation-valid {
        display: none;
    }

    input.input-validation-error {
        border: 1px solid #b94a48;
    }


    select.input-validation-error {
        border: 1px solid #b94a48;
    }

    input[type="checkbox"].input-validation-error {
        border: 0 none;
    }

    .validation-summary-errors {
        color: #b94a48;
    }

    .validation-summary-valid {
        display: none;
    }
</style>