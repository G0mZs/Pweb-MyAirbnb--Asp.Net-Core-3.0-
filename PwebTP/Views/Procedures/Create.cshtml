@model PwebTP.Models.Procedures

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container mb-3 mt-3">
        <h1>Create</h1>

        <h4>Procedures</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" value="@ViewData["ChecklistId"]" asp-for="ChecklistId" />
                    <div class="form-group">
                        <label asp-for="ProcedureName" class="control-label"></label>
                        <input asp-for="ProcedureName" class="form-control" />
                        <span asp-validation-for="ProcedureName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-dark" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-controller="Checklists" asp-action="ManageChecklists" asp-route-id="@ViewData["BackRoomId"]">Back to List</a>
        </div>
    </div>

<style>
    h1{
        padding-top: 1em;
        font-family: 'Playfair Display';
    }
    
</style>