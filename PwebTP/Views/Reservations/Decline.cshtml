@model PwebTP.Models.Reservations
@{
    ViewData["Title"] = "Decline";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mb-3 mt-3">
    <h1>Decline this Reservation?</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Decline" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ReservationsId" />
                <input type="hidden" asp-for="ClientId" />
                <input type="hidden" asp-for="RoomId" />
                <input type="hidden" asp-for="ReservationState" />
                <input type="hidden" asp-for="BeginsAt" />
                <input type="hidden" asp-for="EndsAt" />
                <input type="hidden" asp-for="TotalCost" />
                <input type="hidden" asp-for="GuestsNumber" />
              
                <div class="form-group">
                    <input type="submit" value="Decline" class="btn btn-dark" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="ListReservations">Back to List</a>
    </div>
</div>

<style>
    h1{
        padding-top:1em;
        font-family: 'Playfair Display';
    }
</style>