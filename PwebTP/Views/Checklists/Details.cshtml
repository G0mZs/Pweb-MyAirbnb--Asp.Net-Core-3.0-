@model PwebTP.ViewModels.CheckListProcedureViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container mb-3 mt-3">
        <h1>Details of Checklist</h1>

        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.checklist.Room)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.checklist.RoomId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.checklist.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.checklist.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.checklist.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.checklist.Description)
                </dd>

                @foreach (var item in Model.procedures)
                {

                    <dt class="col-sm-2">
                        Procedures:
                    </dt>
                    <dd class="col-sm-10">
                        @item.ProcedureName
                    </dd>

                }
            </dl>
        </div>
    </div>

<style>
     h1 {
        padding-top: 1em;
        font-family: 'Playfair Display';
    }
</style>