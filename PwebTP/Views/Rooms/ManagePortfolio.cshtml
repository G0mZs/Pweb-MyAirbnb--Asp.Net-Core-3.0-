@model IEnumerable<PwebTP.Models.Rooms>

@{
    ViewData["Title"] = "ManagePortfolio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container mb-3 mt-3">

        <div class="bar" style="clear:both">
            <h2>My Rooms Portfolio</h2>
            <a asp-action="Create">Create New</a>
        </div>
        

        <div class="row pad">
            <hr />

            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <form>
                        <div class="room-top">
                            <img src="@item.CoverImgPath" class="img-fluid rounded" />
                            <div class="overlay">
                                
                                <a class="btn btn-secondary" asp-controller="Checklists" asp-action="ManageChecklists" asp-route-id="@item.RoomsId"><i class="fas fa-list-alt"></i></a>
                                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.RoomsId"><i class="fas fa-eye"></i></a>
                                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.RoomsId"><i class="fas fa-pencil-alt"></i></a>
                                <a class="btn btn-secondary" asp-action="Delete" asp-route-id="@item.RoomsId"><i class="fas fa-trash-alt"></i></a>
                            </div>
                        </div>
                        <div class="room-bottom">
                            <p style="float: left">@item.Title - @item.CityName,@item.CountryName</p>
                            <p style="float:right">€@item.PricePerNight/Night</p>
                        </div>
                    </form>
                </div>
            }



        </div>
    </div>




<style>

    .overlay{
        display:block;
        opacity:0;
        position:absolute;
        top:10%;
        margin-left:0;
        width:7px;
    }

    .room-top:hover .overlay{
        opacity:1;
        margin-left: 5%;
        transition: 0.5s;
    }

    .overlay .fas{
        cursor:pointer;
        background-color:#fff;
        color:#000;
        height:35px;
        width:35px;
        font-size:20px;
        padding:7px;
        margin:5%;
        margin-bottom: 5%;
    }

    .overlay .btn-secondary{
        background:transparent !important;
        border:none !important;
        box-shadow:none !important;
    }

    .bar a{
        float:right;
        padding-top: 3em;
        padding-bottom: 10px;
        font-family: 'Playfair Display';
        color:rgb(33,33,39);
        font-weight:bolder;
    }

    p {
        font-family: 'Montserrat';
        font-size: 12px;
        font-weight: 500;
        color: black;
    }

    .bar h2 {
        padding-top: 1em;
        padding-bottom: 10px;
        font-family: 'Playfair Display';
        display:inline-block;
    }

    .pad hr {
        border-top: 2px solid #b4b4b4;
        width: 100%;
        margin-top: .3rem;
        margin-bottom: 1rem;
    }

    .room-top img {
        float: left;
        width: 300px;
        height: 250px;
        object-fit: cover;
    }
</style>

